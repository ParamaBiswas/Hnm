
@{
    ViewData["Title"] = "Register";
}
<script>
    var vCaptcha = false;
    function createCaptcha() {
        //clear the contents of captcha div first
        document.getElementById('captcha').innerHTML = "";
        var charsArray =
            "0123456789abcdefghijklmnopqrstuvwxyzABCDEFGHIJKLMNOPQRSTUVWXYZ";
        var lengthOtp = 6;
        var captcha = [];
        for (var i = 0; i < lengthOtp; i++) {
            //below code will not allow Repetition of Characters
            var index = Math.floor(Math.random() * charsArray.length + 1); //get the next character from the array
            if (captcha.indexOf(charsArray[index]) == -1)
                captcha.push(charsArray[index]);
            else i--;
        }
        var canv = document.createElement("canvas");
        canv.id = "captcha";
        canv.width = 100;
        canv.height = 50;
        var ctx = canv.getContext("2d");
        ctx.font = "25px Georgia";
        ctx.strokeText(captcha.join(""), 0, 30);
        //storing captcha so that can validate you can save it somewhere else according to your specific requirements
        code = captcha.join("");
        document.getElementById("captcha").appendChild(canv); // adds the canvas to the body element
    }
    function validateCaptcha() {
        event.preventDefault();
       // debugger
        if (document.getElementById("cpatchaTextBox").value == code) {
          //  alert("Valid Captcha")
            vCaptcha = true;
        } else {
            alert("Invalid Captcha. try Again");
            createCaptcha();
        }
    }
    function Registering() {
       // alert(($('input[name=checkBox]').is(':checked')));
        
      //  alert('IN');
        $('#formInfo').validate({
            onsubmit: false,
            rules: {
                Email: {
                    required: true,
                    email: true
                },
                Password: {
                    required: true,
                    minlength: 8
                },
                cPassword: {
                    //required: true,
                    equalTo: "#Password"
                }
               
            },
            errorClass: "input-validation-error",
            messages: {
                Email: {
                    required: 'This field is required.',
                    email: 'Email format is not okay'
                },
                Password: {
                    required: 'This field is required.',
                    minlength: 'Too weak, Password length should be greater than 7'
                    
                    
                },
                cPassword: {
                    equalTo: 'Must be matched with the password'
                }
                
            }
        });

        if ($("#formInfo").validate().form() == false) {
            
            var vForm = $("form[id$='formInfo']");
           // alert('Fill up all required fields');
            return;
           
        }
        if (($('input[name=checkBox]').is(':checked')) == false) {
            alert('Please read and accept the Agreement');
            
            return;
        }
        validateCaptcha();
        if (vCaptcha == false) {
            return;
        }
        var vEmail = document.getElementById('Email').value;
        var vPass = document.getElementById('Password').value;
       // alert(vEmail);

        $.ajax({
            type: "POST",
            url: "http://192.168.10.181/CoreSecurity/api/Authentication/CreateUser",
            //url: "http://192.168.2.8/CoreSecurity/api/values",
            contentType: 'application/json',
            data: JSON.stringify({
                UserID: vEmail,
                UserName: vEmail,
                DomainUserName: "",
                Email: vEmail,
                DomainEmail: "",
                Password: vPass,
                CompanyCode: "1",
                WorkingUnitCode: "2",
                ActionDate: "",
                ActionType: "",
                UserFullName: "",
                PasswordAnswer: ""
            }),
           
            crossDomain: "true",
            dataType: "json",
           
            success: function (data) {
                alert('ok');
                alert(data.message);
            }
        });
    }
    
</script>
